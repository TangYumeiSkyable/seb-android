<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The color of the fill：Set the background transparent here -->
    <solid android:color="@android:color/transparent" />
    <!-- The color of the border ：Can't and the window background color-->
    <stroke
        android:width="2dp"
        android:color="#ffffff" />
    <!-- Set the button on the four corners for arc -->
    <!-- android:radius The radius of the arc -->
    <corners android:radius="50dip" />

    <!-- padding：Button on the inside to the Button text and intervals -->
    <padding
        android:bottom="10dp"
        android:left="30dp"
        android:right="30dp"
        android:top="10dp" />

</shape>
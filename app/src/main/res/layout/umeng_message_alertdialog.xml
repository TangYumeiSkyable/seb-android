<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_bg"
    android:orientation="vertical" >

    <View 
        android:layout_width="match_parent"
        android:layout_height="10px"/>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="45px"
        android:layout_marginBottom="30px"
        android:gravity="center"
        android:textColor="@color/default_text"
        android:textSize="48px"
        android:textStyle="bold" />
    <LinearLayout 
        android:id="@+id/ll_air"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="45px"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="20px"
         android:textColor="@color/default_text"
            android:textSize="42px"
        android:text="PM2.5"/>
        
            <TextView
                 android:id="@+id/txt_pm25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="20px"
                android:textColor="@color/default_text"
                android:textSize="42px"
                android:text="186"/>
        
        <TextView
            android:layout_width="280px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="20px"
            android:textColor="@color/default_text"
            android:textSize="36px"
            android:text="@string/airpurifier_more_show_olfactory_text"/>
        
        <TextView
            android:id="@+id/txt_hcho"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="@color/default_text"
            android:text="@string/airpurifier_more_show_poor_text"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/default_text"
        android:textSize="42px" />
    
     <TextView
        android:id="@+id/txt_msg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/default_text"
        android:textSize="42px"
        android:text="@string/airpurifier_more_show_tenminutsstartsupor_text" />
     <LinearLayout
         android:id="@+id/ll_set_worktime"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp">
    <TextView
        android:id="@+id/txt_set_worktime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/more_href_text"
        android:textSize="16sp"
        android:text="@string/airpurifier_more_show_setbusinesstime_text" />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ico_link"/>
   </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/alertdialog_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_left_selector"
            android:gravity="center"
            android:textColor="@color/default_blue"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="1dp"
            android:layout_height="43dp"
            android:background="@color/alertdialog_line" />

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_right_selector"
            android:gravity="center"
            android:textColor="@color/default_blue"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
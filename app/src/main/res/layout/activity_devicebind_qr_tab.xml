<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:id="@+id/tab_container"
                                     android:layout_width="match_parent"
                                     android:layout_height="162px"
                                     android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/id_switch_tab_ll"
        android:layout_width="match_parent"
        android:layout_height="156px"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_model_tab"
            android:layout_width="354px"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:saveEnabled="false">

            <TextView
                android:id="@+id/tv_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/airpurifier_moredevice_show_choose_type"
                android:textColor="@color/default_blue"
                android:textSize="@dimen/dimen_px_48"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="@dimen/dimen_px_30"
            android:layout_height="match_parent"
            android:background="@drawable/img_cutting"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_wifi_tab"
            android:layout_width="312px"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusable="false"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/airpurifier_moredevice_show_wifi_set"
                android:textColor="@color/gray_tab"
                android:textSize="@dimen/dimen_px_48"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="@dimen/dimen_px_30"
            android:layout_height="match_parent"
            android:background="@drawable/img_cutting"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_bind_tab"
            android:layout_width="354px"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusable="false"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/airpurifier_moredevice_show_device_bind"
                android:textColor="@color/gray_tab"
                android:textSize="@dimen/dimen_px_48"/>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/iv_tab_line"
        android:layout_width="354px"
        android:layout_height="6px"
        android:background="@drawable/tab_selected_pressed_holo"
        android:contentDescription="tab">
    </ImageView>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="#000000" />-->

</com.zhy.autolayout.AutoLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/al_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dimen_px_48"
            android:src="@drawable/ico_more3" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_px_36"
            android:textColor="@color/more_gray_text"
            android:textSize="@dimen/dimen_px_48" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132px"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_px_60"
        android:paddingTop="@dimen/dimen_px_60">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="540px"
            android:layout_height="match_parent">
               <com.zhy.autolayout.AutoRelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   >
                   <ImageView
                       android:id="@+id/iv_air"
                       android:layout_width="318px"
                       android:layout_height="228px"
                       android:layout_marginLeft="114px"
                       android:layout_centerHorizontal="true"
                       android:src="@drawable/ico_air_01" />
                   <TextView
                       android:id="@+id/tv_airlevel"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/dimen_px_6"
                       android:layout_below="@id/iv_air"
                       android:textColor="@color/default_blue"
                       android:textSize="@dimen/dimen_px_44"
                       android:layout_centerHorizontal="true"
                       android:textStyle="bold"
                       />
               </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="1px"
            android:layout_height="match_parent">

            <View
                android:layout_width="282px"
                android:layout_height="match_parent"
                android:layout_marginLeft="-140px"
                android:layout_marginRight="-140px"
                android:background="@drawable/bg_dash_line"
                android:layerType="software"></View>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="108px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_pointblueno2"
                    android:src="@drawable/blued"
                    android:layout_width="12px"
                    android:layout_height="12px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_px_18"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_no2"
                    android:layout_width="140px"
                    android:layout_height="wrap_content"
                    android:textColor="@color/more_setting_text"
                    android:textSize="@dimen/dimen_px_48"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_no2_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_px_48"
                    android:text="--"
                    android:textColor="@color/default_blue"
                    android:textSize="@dimen/dimen_px_60"
                    android:layout_gravity="center_vertical"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_px_36"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_pointblueno3"
                    android:src="@drawable/blued"
                    android:layout_width="12px"
                    android:layout_height="12px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_px_18"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/tv_o3"
                    android:layout_width="140px"
                    android:layout_height="wrap_content"
                    android:textColor="@color/more_setting_text"
                    android:textSize="@dimen/dimen_px_48"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_o3_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_px_48"
                    android:text="--"
                    android:textColor="@color/default_blue"
                    android:textSize="@dimen/dimen_px_60"
                    android:layout_gravity="center_vertical"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_px_36"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_pointbluepm25"
                    android:src="@drawable/blued"
                    android:layout_width="12px"
                    android:layout_height="12px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_px_18"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/tv_pm25"
                    android:layout_width="140px"
                    android:layout_height="wrap_content"
                    android:textColor="@color/more_setting_text"
                    android:textSize="@dimen/dimen_px_48"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_pm25_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_px_48"
                    android:text="--"
                    android:textColor="@color/default_blue"
                    android:textSize="@dimen/dimen_px_60"
                    android:layout_gravity="center_vertical"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_px_36"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_pointbluepm10"
                    android:src="@drawable/blued"
                    android:layout_width="12px"
                    android:layout_height="12px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_px_18"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/tv_pm10"
                    android:layout_width="140px"
                    android:layout_height="wrap_content"
                    android:textColor="@color/more_setting_text"
                    android:textSize="@dimen/dimen_px_48"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_pm10_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_px_48"
                    android:text="--"
                    android:textColor="@color/default_blue"
                    android:textSize="@dimen/dimen_px_60"
                    android:layout_gravity="center_vertical"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dimen_px_30"
        android:paddingLeft="@dimen/dimen_px_60"
        android:paddingRight="@dimen/dimen_px_60"
        android:paddingTop="@dimen/dimen_px_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/airpurifier_more_show_airquality_text"
            android:textSize="@dimen/dimen_px_48"
            />

        <ImageView
            android:layout_width="@dimen/dimen_px_48"
            android:layout_height="@dimen/dimen_px_48"
            android:layout_alignParentRight="true"
            android:src="@drawable/ico_more" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_px_60"
        android:padding="@dimen/dimen_px_60"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_aircontent"
            >
            <ImageView
                android:id="@+id/iv_pointblue"
                android:src="@drawable/blued"
                android:layout_width="12px"
                android:layout_height="12px"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_px_18"
                />
            <TextView
                android:id="@+id/tv_detailtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO2"
                android:textSize="@dimen/dimen_px_48"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/iv_pointblue"
                android:layout_centerVertical="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/tv_detailcontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_aircontent"
            android:lineSpacingExtra="@dimen/dimen_px_6"
            android:layout_marginTop="@dimen/dimen_px_36"
            android:textSize="@dimen/dimen_px_44"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
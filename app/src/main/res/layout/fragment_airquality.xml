<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_px_60"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_airqualitytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="72px"
            android:layout_marginTop="72px"
            android:text="@string/airpurifier_more_airquality_fresh"
            android:textSize="@dimen/dimen_px_48"
            android:textStyle="bold" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="900px"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_airqualitytitle"
            android:layout_centerInParent="true"
            android:layout_marginBottom="72px">

            <ImageView
                android:id="@+id/iv_read"
                android:layout_width="12px"
                android:layout_height="12px"
                android:layout_marginBottom="24px"
                android:layout_marginLeft="@dimen/dimen_px_60"
                android:layout_marginTop="18px"
                android:src="@drawable/blued" />


            <TextView
                android:id="@+id/tv_airqualitycontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:layout_marginLeft="18px"
                android:layout_toRightOf="@id/iv_read"
                android:textSize="@dimen/dimen_px_42"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_read2"
                android:layout_width="12px"
                android:layout_height="12px"
                android:layout_below="@id/tv_airqualitycontent"
                android:layout_marginBottom="24px"
                android:layout_marginLeft="@dimen/dimen_px_60"
                android:layout_marginTop="18px"
                android:src="@drawable/blued" />

            <TextView
                android:id="@+id/tv_airqualitycontent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_airqualitycontent"
                android:layout_marginBottom="24px"
                android:layout_marginLeft="18px"
                android:layout_toRightOf="@id/iv_read"
                android:textSize="@dimen/dimen_px_42"
                android:textStyle="bold" />

        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>

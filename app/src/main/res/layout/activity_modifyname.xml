<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132px"
        android:layout_marginBottom="138px"
        >

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dimen_px_48"
            android:layout_height="@dimen/dimen_px_48"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_px_36"
            android:layout_alignRight="@+id/et_nickname"
            android:src="@drawable/ico_delete"/>

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="900px"
            android:layout_height="126px"
            android:singleLine="true"
            android:hint="@string/airpurifier_more_show_nickname_hint"
            android:gravity="center"
            style="@style/EditTextStyle"
            android:textSize="@dimen/dimen_px_42"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/btn_modify"
        style="@style/btn_style"
        android:text="@string/airpurifier_more_show_modifyname_button"
        android:layout_width="900px"
        android:layout_gravity="center_horizontal"/>
</com.zhy.autolayout.AutoLinearLayout>
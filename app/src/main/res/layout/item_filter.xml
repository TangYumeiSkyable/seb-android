<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dimen_px_30"
            android:layout_height="@dimen/dimen_px_30"
            android:layout_gravity="center_vertical"
            android:alpha="0.3"
            android:src="@drawable/circle_white_bg"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_px_36"
            android:alpha="0.3"
            android:textSize="@dimen/dimen_px_36"
            android:textColor="@color/bg_grey"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_px_36">
        <ProgressBar
            android:id="@+id/pb_progressbar"
            style="@style/StyleProgressBarMini"
            android:layout_width="240px"
            android:layout_height="24px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_progressbar_bg"
            android:max="100"
            android:progress="50" />
        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_px_36"
            android:textSize="@dimen/dimen_px_36"
            android:layout_gravity="center_vertical"
            android:textColor="@color/bg_grey"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
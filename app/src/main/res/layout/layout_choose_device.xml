<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/device_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.rihuisoft.loginmode.view.FontTextView
        android:id="@+id/moble_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/more_setting_text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="@id/device_icon"
        app:layout_constraintLeft_toRightOf="@+id/device_icon"
        app:layout_constraintTop_toTopOf="@+id/device_icon" />

</android.support.constraint.ConstraintLayout>
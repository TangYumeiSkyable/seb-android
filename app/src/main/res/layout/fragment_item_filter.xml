<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ProgressBar
        android:id="@+id/pb_progressbar"
        style="@style/StyleProgressBarMini"
        android:layout_width="@dimen/dp_100"
        android:layout_height="8dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_progressbar_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_circle_pot" />

    <ImageView
        android:id="@+id/iv_circle_pot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center_vertical"
        android:alpha="0.3"
        android:src="@drawable/circle_white_bg"
        app:layout_constraintLeft_toLeftOf="@id/pb_progressbar" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:alpha="0.3"
        android:text="--"
        app:layout_constraintBottom_toBottomOf="@id/iv_circle_pot"
        app:layout_constraintLeft_toRightOf="@id/iv_circle_pot"
        app:layout_constraintTop_toTopOf="@id/iv_circle_pot" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:text="0%"
        app:layout_constraintBottom_toBottomOf="@id/pb_progressbar"
        app:layout_constraintLeft_toRightOf="@id/pb_progressbar"
        app:layout_constraintTop_toTopOf="@id/pb_progressbar" />
</android.support.constraint.ConstraintLayout>